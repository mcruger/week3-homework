<div class="container">
	<h1>Dice - Roll your goal to win!</h1>
	<hr>

	<!-- 
	output images 
	NOTE: rails doesn't like image elements (<img>) outputted. use the image_tag helper function instead
	-->
	<%
		d_one_url = "https://uchicago.s3.amazonaws.com/d0"+@die_one_val[0].to_s+".png"
		d_two_url = "https://uchicago.s3.amazonaws.com/d0"+@die_two_val[0].to_s+".png"
	%>


	<%= image_tag(d_one_url, :alt => "die one") %>
	<%= image_tag(d_two_url, :alt => "die two") %>

	<br>
	<h3>You rolled a <%=@roll_total%>, but you need to roll a <%=@goal%> to win... roll again!</h3>	
	<br>
	<% link = "href=\"/dice?goal=" + @goal.to_s %>
	<a class="btn btn-large btn-info" href=""<%=link%>""> Roll again </a>
</div>